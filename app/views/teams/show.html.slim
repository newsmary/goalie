.breadcrumb
  a =link_to :Teams, teams_path

.page-header
  = link_to edit_team_path(@team), class: 'btn btn-primary' do
    span.glyphicon.glyphicon-pencil
    |  Edit
  h1
    =@team.name
  p =@team.body
  p =link_to "Learn more", @team.url unless @team.url.to_s.empty?

H3 Goals
ul
  - @team.goals.each do |g|
    li = link_to g.body, g

/=link_to "New Goal", new_goal_path(team: @team), class: "btn btn-primary"

br
= link_to  new_goal_path(team: @team), class: 'btn btn-primary' do
  span.glyphicon.glyphicon-plus
  |  New Goal
